<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.senaigo.mobile.os2.activity.EsqueciSenhaActivity"
    android:background="@drawable/fundo7">


    <EditText
        android:id="@+id/txtEmail"
        android:layout_width="270dp"
        android:layout_height="35dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="226dp"
        android:background="#21000000"
        android:drawableRight="@drawable/ic_action_email"
        android:ems="10"
        android:hint="@string/hint_email"
        android:inputType="textPersonName"
        android:textColorHint="#fff"
        android:textSize="16dp"
        />

    <TextView
        android:id="@+id/txtmsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/txtEmail"
        android:layout_marginTop="213dp"
        android:hint="@string/hint_entrecomemail"
        android:textColorHint="#fff"
        android:textSize="16dp" />

    <EditText
        android:id="@+id/txtReenviar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="129dp"
        android:drawableLeft="@drawable/ic_action_key"
        android:ems="10"
        android:hint="@string/hint_credencail"
        android:inputType="textPersonName"
        android:textColorHint="#A0522D"
        android:textSize="24dp"
        android:cursorVisible="false"
        android:layout_marginLeft="5dp"
        android:gravity="center"
        android:focusable="false"
        android:focusableInTouchMode="false"/>

    <Button
        android:id="@+id/btnEnviar"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="167dp"
        android:background="#FF4500"
        android:text="Enviar"
        android:textColor="#fff"
        android:onClick="recuperarSenha"/>
</RelativeLayout>