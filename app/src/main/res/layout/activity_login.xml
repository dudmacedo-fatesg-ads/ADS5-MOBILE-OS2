<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo7"
    android:visibility="visible"
    tools:context="br.com.senaigo.mobile.os2.activity.LoginActivity">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="108dp"
        android:layout_height="95dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        app:srcCompat="@drawable/logosaneago2" />


    <EditText
        android:id="@+id/txtUser"
        android:layout_width="220dp"
        android:layout_height="35dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="195dp"
        android:background="#21000000"
        android:drawableLeft="@drawable/ic_action_user1"
        android:ems="10"
        android:hint="@string/hint_user"
        android:inputType="textPersonName"
        android:textColorHint="#fff"
        android:textSize="16dp" />

    <EditText
        android:id="@+id/txtSenha"
        android:layout_width="220dp"
        android:layout_height="35dp"
        android:layout_centerInParent="true"
        android:background="#21000000"
        android:drawableLeft="@drawable/ic_action_senha"
        android:ems="10"
        android:hint="@string/hint_password"
        android:inputType="textPassword"
        android:textColorHint="#fff"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/txtEsqueciSenha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="198dp"
        android:text="Esqueci minha senha ?"
        android:textColor="#fff"
        android:onClick="lembrarSenha"
        />

    <android.support.v7.widget.CardView
        android:id="@+id/cardEntrar"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="134dp"
        app:cardBackgroundColor="#F0FFFF"
        app:cardCornerRadius="25dp"
        app:cardElevation="10dp"
        android:onClick="login">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txtEntrar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="ENTRAR"
                android:textColor="#4B0082"
                android:textSize="16dp"
                android:textStyle="bold" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>



</RelativeLayout>